{
  "name": "uikit-project",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:dev": "cross-env NODE_ENV=development lerna run build",
    "build:docs": "lerna run --scope */uikit-docs build",
    "build:libs": "lerna run --ignore */uikit-docs build",
    "dev": "lerna run dev --stream --parallel",
    "dev:docs": "lerna run --scope */uikit-docs dev --stream --parallel",
    "dev:libs": "lerna run --ignore */uikit-docs dev --stream --parallel"
  },
  "devDependencies": {
    "lerna": "3.14.1",
    "cross-env": "6.0.3"
  }
}